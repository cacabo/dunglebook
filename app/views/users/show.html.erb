<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3 pad-20-0">
            <p>
                <strong>Name:</strong>
                <%= @user.name %>
            </p>

            <p>
                <strong>Bio:</strong>
                <%= @user.bio %>
            </p>

            <p>
              <strong>Dungles: </strong><%= @dungles.size %>
            </p>

            <div class="dungles">
              <% if @dungles.size === 0 %>
                <% if @user.name.present? %>
                  <p><%= @user.name %> does not have any dungles yet.</p>
                <% else %>
                  <p>This dungler does not have any dungles yet.</p>
                <% end %>
              <% else %>
                <table class="table">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Description</th>
                      <th>Performance</th>
                      <th>Ambience</th>
                      <th>Scent</th>
                      <th>Cleanliness</th>
                      <th>Traffic</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @dungles.each do |dungle| %>
                      <tr>
                        <td><%= dungle.title %></td>
                        <td><%= dungle.description %></td>
                        <td><%= dungle.performance %></td>
                        <td><%= dungle.ambience %></td>
                        <td><%= dungle.scent %></td>
                        <td><%= dungle.cleanliness %></td>
                        <td><%= dungle.traffic %></td>
                        <td><%= link_to 'Show', user_dungle_path(user_id: @user.id, id: dungle.id) %></td>
                        <td><%= link_to 'Edit', edit_user_dungle_path(user_id: @user.id, id: dungle.id) %></td>
                        <td><%= link_to 'Destroy', user_dungle_path(user_id: @user.id, id: dungle.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              <% end %>
            </div>

            <% if current_user === @user %>
            <%= link_to 'Edit', edit_user_path %><br>
            <% end %>
            <%= link_to 'Back to all users', users_path %><br>
            <%= link_to 'Back to home', root_path %>
        </div>
    </div>
</div>
