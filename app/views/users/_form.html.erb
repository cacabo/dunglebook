<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: 'true', id: :user_name, class: 'form-control', required: 'true' %>
  </div>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio, id: :user_bio, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= button_tag(class: 'btn shade purple') do %>
      Update information <i class="fa fa-arrow-right" aria-hidden="true"></i>
    <% end %>
  </div>
<% end %>
