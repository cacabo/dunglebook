<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 pad-20-10">
            <p>Hello
                <%= @resource.email %>!</p>

            <p>Your account has been locked due to an excessive number of unsuccessful sign in attempts.</p>

            <p>Click the link below to unlock your account:</p>

            <%= link_to unlock_url(@resource, unlock_token: @token), class: 'btn shade blush' do %>
                <i class="fa fa-unlock-alt before" aria-hidden="true"></i> Unlock my account
            <% end %>
        </div>
    </div>
</div>
