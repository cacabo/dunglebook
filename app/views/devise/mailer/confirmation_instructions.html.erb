<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 pad-20-10">
            <p>Welcome
                <%= @email %>!</p>

            <p>You can confirm your account email through the link below:</p>

            <%= link_to confirmation_url(@resource, confirmation_token: @token), class: 'btn shade green' do %>
                <i class="fa fa-check before" aria-hidden="true"></i> Confirm my account
            <% end %>
        </div>
    </div>
</div>
