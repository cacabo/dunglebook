<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 pad-20-10">
            <h2>Forgot your password?</h2>
            <div class="divider"></div>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>

            <div class="actions">
                <%= f.submit "Send password reset instructions", class: "btn shade blush" %>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
